# Orange Cab - Environment Variables Example
# Copy this file to .env and fill in your values

# Database (MySQL)
DATABASE_URL=mysql://root:dev_password@localhost:3306/orange_cab

# Application
VITE_APP_ID=orange-cab-dev
NODE_ENV=development

# Authentication
JWT_SECRET=your-jwt-secret-here-change-in-production
OAUTH_SERVER_URL=http://localhost:3000/oauth
OWNER_OPEN_ID=owner-open-id-for-admin-access

# Storage (MinIO / S3-compatible)
# For local development with MinIO:
BUILT_IN_FORGE_API_URL=http://localhost:9000
BUILT_IN_FORGE_API_KEY=minioadmin

# MinIO Configuration (for docker-compose)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
